<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartPlant">

        <activity
            android:name=".HealthActivity"
            android:exported="false"
            android:label="Plant Health"
            android:theme="@style/PopUp"/>
        <activity
            android:name=".HistoryActivity"
            android:exported="false"
            android:label="History"
            android:theme="@style/PopUp" />
        <activity
            android:name=".SensorsActivity"
            android:exported="false"
            android:label="Sensors"
            android:theme="@style/PopUp" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".RatePopActivity"
            android:exported="false"
            android:label="Rate App"
            android:theme="@style/PopUp" />
        <activity
            android:name=".FeedbackPopActivity"
            android:exported="false"
            android:label="Feedback "
            android:theme="@style/PopUp" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.GoogleLoginActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>